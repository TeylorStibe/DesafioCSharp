@using DesafioTeylor.Models;
@{
    ViewData["Title"] = "Show";
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl"
          crossorigin="anonymous" />
    <title>Lista de usuários</title>
</head>
<body>
    @{
        UserDAL userdal = new UserDAL();
        var usuarios = userdal.GetAll();

    }
    <main class="align-content-lg-center">
        <h1>Lista de Usuários</h1>
        <form action="/Home/Show" method="post">

            <table class="table table-responsive table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Data de Nascimento</th>
                        <th scope="col">CPF</th>
                        <th scope="col">Endereço</th>
                        <th scope="col">Cidade</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var item in usuarios)
                        {
                            <tr>
                                <th scope="row">@item.id</th>
                                <td>@item.Name</td>
                                <td>@item.Birthdate</td>
                                <td>@item.CPF</td>
                                <td>@item.Address</td>
                                <td>@item.City</td>

                            </tr>
                        }
                    }
                </tbody>
            </table>
            <br />
            <div>
                <label>Digite o código do usuário que deseja apagar:</label>
                <br />
                <input type="number" value="@ViewBag.id" name="id" placeholder="Código">
                <br />
                <div>
                    <br />
                    <button type="submit" class="button2" name="delete" value="Deletar">Deletar</button>
                    <input type="hidden" name="delete" value="@ViewBag.delete" />
                    <a class="button2" name="back" value="Voltar" type="submit" href="/Home/Index" style="text-decoration:none">Voltar</a>
                </div>
            </div>
        </form>
    </main>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
        crossorigin="anonymous"></script>
<script src="https://use.fontawesome.com/d09559d1bd.js%22%3E></script>
</html>