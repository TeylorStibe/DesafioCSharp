@{
    ViewData["Title"] = "Creation";
}

<div class="text-center">
    <h1 style="text-align:center; padding-top:40px;"><b>Criação de usuário</b></h1>
    <form action="/Home/Creation" method="post">
        <div style="display:block;">
            <label>Nome</label>
            <br />
            <input type="text" value="@ViewBag.name" name="name">
            <span data-placeholder="Nome"></span>
        </div>
        <div>
            <label>Data de nascimento</label>
            <br />
            <input type="date" value="@ViewBag.birthdate" name="birthdate">
            <span data-placeholder="Data de nascimento"></span>
        </div>
        <div>
            <label>CPF</label>
            <br />
            <input type="text" value="@ViewBag.cpf" name="cpf">
            <span data-placeholder="CPF"></span>
        </div>
        <div>
            <label>Endereço</label>
            <br />
            <input type="text" value="@ViewBag.address" name="address">
            <span data-placeholder="Endereço"></span>
        </div>
        <div>
            <label>Cidade</label>
            <br />
            <input type="text" value="@ViewBag.city" name="city">
            <span data-placeholder="Cidade"></span>
        </div>
        <br />

        <button class="button" name="reg" value="Cadastrar" type="submit">Cadastrar</button>
    </form>
</div>
